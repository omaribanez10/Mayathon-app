<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:focusableInTouchMode="true"
        android:id="@+id/cardviewModeloSolicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/accent"
        app:cardElevation="10dp"

        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity=""
            >
            <TextView
                android:id="@+id/pocentajeRentabilidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rentabilidad"
                android:textSize="11dp"
                android:layout_gravity="right"

                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:layout_weight="1"/>
            <TextView
                android:layout_gravity="left"
                android:id="@+id/nombreSolicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/RiesgoSolicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riesgo"
                android:textSize="11dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_gravity=""
                android:id="@+id/valorInvertido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Valor Invertido"
                android:textColor="@color/white"
                android:fontFamily="sans-serif"
                android:layout_weight="2"/>
                <TextView
                    android:id="@+id/montoSolicitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto"
                    android:textSize="11dp"
                    android:layout_gravity="right"

                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>